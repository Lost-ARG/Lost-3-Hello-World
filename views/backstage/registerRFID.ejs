<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Backstage Register RFID</title>
  <%- include('../models/bs_css.ejs') %>
</head>

<body class="bg-dark text-light">
  <%- include('./nav.ejs') %>
  <div class="container text-center">
    <div class="row mt-5">
      <div class="col-lg-6 m-auto">
        <h1>Backstage Register RFID</h1>
        <hr class="mt-5">
      </div>
    </div>
    <div class="row mt-4">
      <div class="col-lg-4 m-auto border pt-5 pb-5">
        <div class="row mb-1">
          <div class="col-4 d-flex align-items-center justify-content-center"><label id="basic-addon1">Card ID</label>
          </div>
          <div class="col-8"><input name="uid" type="text" class="form-control" placeholder="Card ID"></div>
        </div>
        <div class="row mb-1">
          <div class="col-4 d-flex align-items-center justify-content-center"><label id="basic-addon1">Type</label>
          </div>
          <div class="col-8">
            <select class="form-select" id="inputGroupSelect01" name="type" required>
              <option selected>Choose...</option>
              <option value="tag">Tag</option>
              <option value="card">Card</option>
            </select>
          </div>
        </div>
        <div class="row mt-5">
          <div class="col-12 m-auto text-center">
            <button class="btn btn-primary w-50" type="button" onclick="sendRequest()">Save</button>
          </div>
        </div>
      </div>
    </div>
  </div>
  <%- include('../models/bs_js.ejs') %>
  <script src="/javascripts/backstage/registerRFID.js"></script>
</body>

</html>